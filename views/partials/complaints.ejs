<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/headers.ejs') %>
</head>
<body>
  <%- include('../partials/navbar.ejs',{User: User,LoggedIn:LoggedIn}) %>
  <div class="container py-3">
    <form action="/complaints" method="post" enctype="form-data"
    >
    <div class="row">
     
          <div class="row justify-content-center">
            <div class="col-md-12">
              <span class="anchor" id="formUserEdit"></span>
              
              <!-- form user info -->
              <div class="card card-outline-secondary">
                <div class="card-header text-center">
                  <h3 class="mb-0">Complaints / Suggestions Section</h3>
                </div>
                <div class="card-body">
                  <form autocomplete="off" class="form" role="form">
                    <div class="form-group row">
                      <label class="col-lg-3 col-form-label form-control-label"><strong>Select The Issue</strong></label>
                      <div class="col-lg-9 radio">
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="Help Desk 1">
                          <label class="form-check-label" for="inlineRadio2">Help Desk 1</label>
                        </div>
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="Help Desk 2">
                          <label class="form-check-label" for="inlineRadio2">Help Desk 2</label>
                        </div>
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio4" value="Air Conditioners">
                          <label class="form-check-label" for="inlineRadio4">Air Conditioners</label>
                        </div>
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio4" value="Internet Facilities">
                          <label class="form-check-label" for="inlineRadio4">Internet Facilities</label>
                        </div>
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio4" value="Other">
                          <label class="form-check-label" for="inlineRadio4">Other</label>
                        </div>
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="Suggestions">
                          <label class="form-check-label" for="inlineRadio1">Suggestions</label>
                        </div>
                      </div>
                    </div>
                    
                    <div class="form-group row">
                      <label class="col-lg-3 col-form-label form-control-label">State your Complaint/Suggestion</label>
                      <div class="col-lg-9">
                        <textarea class="form-control" id="Feedback" name="explanation" rows="6"></textarea>
                      </div>
                    </div>
                    
                    <div class="form-group row">
                      <label class="col-lg-3 col-form-label form-control-label"></label>
                      <div class="col-lg-9">
                        <button type="submit" class="btn3 btn btn-primary" >Save Changes</button>
                        <button href = "/" class="btn3 btn btn-secondary" >Cancel</button>

                      </div>
                    </div>
                  </form>
                </div>
              </div><!-- /form user info -->
            </div>
          </div>
        </div>
        </form>
      </div>
      <%- include('../partials/footer.ejs') %>
</body>
</html>