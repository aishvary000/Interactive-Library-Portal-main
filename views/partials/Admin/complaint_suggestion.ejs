					<form id="tableForm" action="/filterTask" method="post">
                    <div class="col-sm-9">
                        
						<button type="submit" class="filter-group" >Apply Filter</button>
						
                        <div class="filter-group">
							
                            <label>Type</label>
                            <select class="selectpicker" data-style="btn-info" name="type">
								
									<option name="default" value="default">No</option>
									<option name="suggestion" value="suggestion">suggestion</option>
									<option name="complaint" value="complaint">complaint</option>
								
                               
                    							
                            </select>
							
                        </div>
						<div class="filter-group">
                            <label>Status</label>
							
                            <select class="selectpicker1" data-style="btn-info" name="status">
								
									<option name="default" value="default">No</option>
									<option name="pending" value="pending">Pending</option>
									<option name="completed" value="completed">Completed</option>
								
                               
                    							
                            </select>
							
                        </div>
                        <span class="filter-icon"><i class="fa fa-filter"></i></span>
						
                    </div>
				</form>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>S.NO</th>
                        <th><h7>DESCRIPTION</h7></th>
                        <th>Type</th>
                        <th>Date</th>						
                        <th>Status</th>						
                        <th>Complete</th>
                    </tr>
                </thead>
                <tbody>
                    <% complaintAndSuggestionAdmin.forEach(function (practice,idx) {%>
                       
                        <!--   -->
                        <tr>
      
                          <td><%= idx+1%></td>
                          <td><%= practice.explanation%></td>
                          <td><%= practice.complaintAndSuggestion%></td>
                          <td><%= practice.created_at%></td>
                          <% if(practice.status){ %>

                            <td style="color: green">COMPLETED</td>
                          <% } else{ %>  
                            <td style="color: red">PENDING</td>
                         <% } %>
						 <td>
						 <form method="POST" action="/changeStatusComplaints">
							<input type="hidden" name="id" value="<%=practice._id%>" />
                         <input type="checkbox" name="checkbox" onChange="this.form.submit()" <%= practice.status===1 ? 'checked' : '' %>/>&nbsp;
						  </form>
						</td>
                        </tr>
                        <% })%>
                </tbody>
            </table>
